<li class="list-group-item">
  <article class="row">
    <div class="col-xs-2 col-md-1">
      <img src=<%=comentario.usuario.imagem_url  %>  class="img-circle img-fluid  img-responsive" alt="">
    </div>
    <div class="col-xs-10 col-md-11">
      <div>
        <div class="mic-info">
          Por: <a href="/index/perfil/<%=comentario.usuario.id  %>"><%=comentario.usuario.nome  %> </a> 
        </div>
      </div>
      <div class="comment-text">
        <%=comentario.conteudo%>
      </div>
      <form action="/index/curtir-comentario/<%=comentario.id%>" method="POST">
      <div class="action">
        <% index = comentario.curtidas.findIndex(x => x.usuario_id ===  usuario.id  ) %>



        <%if (index ==0) {%>
          <button type="submit" class="btn-xs rounded btn-primary  img-fluid" title="Like">
            <img class ="icones-comentarios" src="/icones/like.svg">
          </button>
        <% }else{ %> 
          <button type="submit" class="btn-xs rounded btn-primary  img-fluid" title="Like">
            <img class ="icones-comentarios" src="/icones/gostar.svg">
          </button>
          
        <% } %> 
        
      </div>
      </form>
    </div>
  </article>
</li>
