<article class="card-header">
  <div class="d-flex justify-content-between align-items-center">
    <div class="d-flex justify-content-between align-items-center">
      <div class="text-center text-lg-left">
        <p class="my-1 my-lg-auto btn rounded-pills card-resumo-roteiro text-center text-lg-left"><%= roteiro.qntd_dias %> Dias</p>
      </div>
    </div>
  </div>
  <div class="row mt-2 align-items-center">
    <div class="col-sm-12 col-md-4">
      <div class="d-flex align-items-center">
        <div class="mr-2">
          <a href="/index/perfil/<%= roteiro.usuario.id %>">
            <img class="rounded-circle header-icone" src="<%= roteiro.usuario.imagem_url %>" alt="Perfil de <%= roteiro.usuario.nome %>">
          </a>
        </div>
        <div class="ml-2">
          <div class="h5 m-0"><%= roteiro.usuario.apelido %></div>
        </div>
      </div>
    </div>
    <div class="col-sm-12 col-md-4">
      <p class="my-1 my-lg-auto text-center">Estilo da viagem: <%= roteiro.estilo.nome %></p>
    </div>
    <div class="col-sm-12 col-md-4">
      <p class="my-1 my-lg-auto text-center">Data de in√≠cio: <%= moment(roteiro.data_inicio).format('L') %> </p>
    </div>
  </div>
</article>
