<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <%- include('./partials/head') %>
    <link rel="stylesheet" href="/stylesheets/perfil.css">
  </head>

  <body>
    <%- include('./partials/header') %>
    <main>
      <div class="container my-5">
        
        <%- include('./partials/pag-perfil/secao-info') %>
        <hr>
        <% if (usuarioPagina.id === usuario.id) { %>
          <%- include('./partials/pag-perfil/btn-editar') %>
        <% } %>
        <%- include('./partials/pag-perfil/resumo') %>
        
        <hr>
        <div class="row">
          <div class="col">
            <section class="my-5">
              <h2 class="text-left my-4"><%= usuarioPagina.id === usuario.id ? "Meus Roteiros" : "Roteiros" %></h2>
              <% if (usuarioRoteiros.length > 0) { %>
                <% usuarioRoteiros.forEach(roteiro => { %>
                  <%- include('./partials/pag-perfil/roteiro-visualizacao', { roteiro }) %>
                <% }) %>
              <% } else { %>
                <h4 class="text-left">Nenhum roteiro cadastrado</h3>
              <% } %>
            </section>          
          </div>
          <div class="col">
            <section class="my-5 ">
              <h2 class="text-left my-4">Roteiros curtidos</h2>
              <% if (usuarioCurtidos.length > 0) { %>
                
                <% usuarioCurtidos.forEach(curtida => { %>
                  <% const { roteiro } = curtida %> 

                  <%- include('./partials/pag-perfil/roteiro-visualizacao', { roteiro }) %>
                <% }) %>
              <% } else { %>
                <h4 class="text-left">Nenhum roteiro curtido</h3>
              <% } %> 
            </section>          
          </div>
        </div>
      </div>
    </main>
    <%- include('./partials/footer') %> 
    <%- include('./partials/scripts-body') %> 
  </body>

</html>
