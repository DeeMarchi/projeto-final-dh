<!DOCTYPE html>
<html lang="pt-br">

  <head>
    <%- include('./partials/head') %>
  </head>

  <body>
    <%- include('./partials/header') %>
    <main>
      <div class="row m-0">
        <div class="d-none d-xl-block col-xl-2">
          <%- include('./partials/side-bar') %>
        </div>
        <div class="col">
          <div class="container my-5">
            <h1 class="text-center text-uppercase">Busca filtrada</h1>
            <%- include('./partials/pag-pesquisa/form-busca') %>
            <section class="mb-5">
              <h2 class="text-center">Roteiros</h2>
              <% for (let i = 0; i < 5; ++i) { %>
                <%#- include('./partials/pag-perfil/roteiro-visualizacao') %>
              <% } %>
            <section class="my-5">
              <h2 class="text-center">Usu√°rios</h2>
              <div class="row justify-content-center">
                <% if (typeof(usuariosBusca) !== 'undefined' && usuariosBusca.length > 0) { %>
                  <% for (let i = 0; i < usuariosBusca.length; ++i){ %>
                    <div class="col-xs-12 col-sm-6 col-md-4 px-sm-1 px-md-3">
                      <article class="bg-white text-dark text-break rounded-lg p-2 d-flex justify-content-between my-2">
                        <a class="my-auto" href="/index/perfil/<%= usuariosBusca[i].id %>">
                          <img class="seguidores-icone" src="<%= usuariosBusca[i].imagem_url %>" alt="Foto <%= usuariosBusca[i].nome %>">
                        </a>
                        <p class="my-auto"><%= usuariosBusca[i].apelido %></p>
                        <button class="btn p-0 m-0">
                          <img class="seguidores-icone" src="/icones/componentes/usuario/seguir.svg" alt="Seguir <%= usuariosBusca[i].nome %>" title="Seguir <%= usuariosBusca[i].nome %>">
                        </button>
                      </article>
                    </div>
                  <% }; %> 
                <% } else { %>
                  <h3>Nenhum resultado</h3>
                <% } %> 
              </div>
            </section>
          </div>
        </div>
      </div>
    </main>
    <%- include('./partials/footer') %>
    <%- include('./partials/scripts-body') %>
  </body>

</html>
